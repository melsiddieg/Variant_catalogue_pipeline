// 4GB
          withName: 'Vcftools_TsTv_by_qual|align_to_MT|MT_MergeVcfs|MarkDuplicates|MT_merge_samples|count_variants_vcftools' {
                memory = 4.GB
        }

// 4GB, 8cpus
          withName: 'Bcftools_stats|split_vcf_by_chr|SV_annotation|samtools_fixmate' {
                memory = 4.GB
                cpus = 8
        }

