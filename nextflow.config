}

singularity {
     enabled = true
     autoMounts = true
     runOptions = "-B /mnt/scratch/SILENT/Act3/ -B /mnt/common/SILENT/Act3/ -B /mnt/common/DATABASES/REFERENCES/"
     cacheDir = "/mnt/common/SILENT/Act3/singularity"
 }

